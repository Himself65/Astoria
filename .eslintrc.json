{
  "root": true,
  "parserOptions": {
    "parser": "typescript-eslint-parser",
    "ecmaVersion": 2018
  },
  "extends": [
    "standard",
    "eslint:recommended"
  ],
  "rules": {
    "eqeqeq": [
      "error",
      "always",
      {
        "null": "ignore"
      }
    ],
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "warn"
  },
  "globals": {
    "expect": true,
    "describe": true,
    "it": true,
    "jest": true,
    "process": true
  }
}
